{
  "name": "Entorno con Gemini CLI",

  // Usamos la imagen universal que ya viene con muchas herramientas.
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // "Features" son la forma moderna y recomendada de añadir herramientas.
  // Esta línea instala automáticamente el Google Cloud SDK.
  "features": {
    "ghcr.io/devcontainers/features/google-cloud-cli:1": {}
  },

  // Un pequeño comando que se ejecuta después de crear el Codespace.
  // Te recordará que necesitas autenticarte.
  "postCreateCommand": "echo 'Entorno listo. Ejecuta gcloud auth login para autenticarte con Google Cloud.'"
}
