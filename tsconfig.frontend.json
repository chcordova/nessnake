{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],
    "outDir": "./public/dist",
    "rootDir": "./src/frontend",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": []
  },
  "include": ["src/frontend/**/*"],
  "exclude": ["node_modules", "tests"]
}
