{
  "name": "NesSnake Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000, 9323, 9324],
  "customizations": {
    "vscode": {
      "extensions": [
        // --- Base & Google Cloud ---
        "GoogleCloudTools.cloudcode",

        // --- Code Quality (General) ---
        "dbaumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",

        // --- Frontend (Phaser + TypeScript) ---
        "SmrutiRanjanBadatya.phaser-snips",

        // --- Backend (Node.js + Express) ---
        "orta.vscode-jest",
        "mikestead.dotenv",
        "humao.rest-client",

        // --- Mobile (CapacitorJS) ---
        "webnative.webnative",

        // --- End-to-End Testing ---
        "ms-playwright.playwright"
      ],
      "settings": {
        // --- Settings for Prettier formatting ---
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",

  // --- run the post-create script ---
  "postCreateCommand": "bash .devcontainer/post-create.sh"
}
